{
    "name": "utils-tools",
    "version": "0.1.0",
    "description": "The perfect web util tools for everyone.",
    "engines": {
        "node": ">=20.0.0"
    },
    "private": true,
    "trustedDependencies": [
        "sharp"
    ],
    "type": "module",
    "scripts": {
        "build": "qwik build && rm -rf ./dist/build/*.wasm",
        "build.client": "vite build",
        "build.preview": "vite build --ssr src/entry.preview.tsx",
        "build.server": "vite build -c adapters/cloudflare-pages/vite.config.ts",
        "build.types": "tsc --incremental --noEmit",
        "deploy": "pnpm run build && wrangler pages deploy ./dist",
        "dev": "vite --mode ssr",
        "dev.debug": "node --inspect-brk ./node_modules/vite/bin/vite.js --mode ssr --force",
        "fmt": "prettier --write .",
        "fmt.check": "prettier --check .",
        "lint": "eslint \"src/**/*.ts*\"",
        "preview": "pnpm run build && wrangler pages dev ./dist",
        "serve": "wrangler pages dev ./dist --compatibility-flags=nodejs_compat",
        "start": "vite --open --mode ssr",
        "build-cf-types": "wrangler types",
        "qwik": "qwik"
    },
    "devDependencies": {
        "@builder.io/qwik": "1.5.1",
        "@builder.io/qwik-city": "1.5.1",
        "@builder.io/qwik-react": "0.5.4",
        "@cloudflare/workers-types": "^4.20240320.1",
        "@ffmpeg/types": "^0.12.2",
        "@tailwindcss/typography": "^0.5.10",
        "@types/eslint": "^8.56.2",
        "@types/node": "^20.11.6",
        "@types/react": "^18.2.28",
        "@types/react-dom": "^18.2.13",
        "@typescript-eslint/eslint-plugin": "^6.19.1",
        "@typescript-eslint/parser": "^6.19.1",
        "autoprefixer": "^10.4.14",
        "eslint": "^8.56.0",
        "eslint-plugin-qwik": "^1.4.5",
        "postcss": "^8.4.31",
        "prettier": "^3.2.4",
        "prettier-plugin-tailwindcss": "^0.5.4",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "tailwindcss": "3.4.1",
        "typescript": "5.3.3",
        "undici": "*",
        "vite": "5.2.3",
        "vite-tsconfig-paths": "^4.2.1",
        "wrangler": "3.37.0"
    },
    "dependencies": {
        "@ffmpeg/core": "^0.12.6",
        "@ffmpeg/ffmpeg": "^0.12.10",
        "@imagemagick/magick-wasm": "^0.0.28",
        "@qwikest/icons": "^0.0.13",
        "@tailwindcss/forms": "^0.5.7",
        "lottie-web": "^5.12.2"
    },
    "packageManager": "pnpm@8.15.5+sha256.4b4efa12490e5055d59b9b9fc9438b7d581a6b7af3b5675eb5c5f447cee1a589"
}
